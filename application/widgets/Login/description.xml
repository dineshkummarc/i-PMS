<?xml version="1.0" encoding="UTF-8"?>

<widget>
    <name>Login</name>
    <title>Login</title>
    <description>Display a form to login</description>
    <author>Laurent Declercq / i-PMS Core Team</author>
    <email>core@i-pms.net</email>
    <version>1.0.0</version>
    <license>GPLv2</license>
    <load_type>server</load_type>
    <id>loginWidget</id>
    <params>
        <param name="title">
            <description><![CDATA[Allow to set a title for login box]]></description>
            <value>Title</value>
        </param>
        <param name="rememberMe">
            <description>
                <![CDATA[Tell whether or not a "Remember me" checkbox should be displayed along the login form]]>
            </description>
            <value>0</value>
        </param>
    </params>
</widget>
