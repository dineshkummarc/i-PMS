<!DOCTYPE widget SYSTEM "../description.dtd">

<widget>
    <name>Widgets_Login_Login</name>
    <title>Login</title>
    <description>Display a form to login</description>
    <author>Laurent Declercq / i-PMS Core Team</author>
    <email>core@i-pms.net</email>
    <version>1.0.0</version>
    <license>GPLv2</license>
    <load>server</load>
    <id>loginWidget</id>
    <params>
        <param target="site" name="username">
            <label>Username:</label>
            <input type="text" name="username" val=""/>
        </param>
        <param target="site" name="password">
            <label>Password:</label>
            <input type="password" name="password" val=""/>
        </param>
        <param name="title">
            <label>Optional title</label>
            <input type="text" name="title" val="" />
        </param>
        <param name="rememberMe">
            <label>Allow remember me?</label>
            <input type="checkbox" name="rememberMe" val="0" />
        </param>
    </params>
</widget>
