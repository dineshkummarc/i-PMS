<!DOCTYPE widget SYSTEM "../description.dtd">

<widget>
    <name>Widgets_Login_Login</name>
    <title>Login</title>
    <description>Display a form to login</description>
    <author>Laurent Declercq / i-PMS Core Team</author>
    <email>core@i-pms.net</email>
    <version>1.0.0</version>
    <license>GPLv2</license>
    <load>server</load>
    <id>loginWidget</id>
    <forms>
        <form name="loginForm">
            <element type="text" name="username" val="" label="Username" required="1">
                <filter>StripTags</filter>
                <filter>StringTrim</filter>
             </element>
            <element type="password" name="password" val="" label="Password" required="1">
                <filter>StripTags</filter>
                <filter>StringTrim</filter>
            </element>
        </form>
        <form name="dashboardForm">
            <element type="text" name="title" val="" label="Optional title" required="0">
                <filter>StripTags</filter>
                <filter>StringTrim</filter>
            </element>
            <element type="checkbox" name="rememberMe" label="Add the 'remember me' option ?" val="0" required="1">
                <validator>Int</validator>
            </element>
        </form>
    </forms>
</widget>
