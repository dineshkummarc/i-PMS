<!DOCTYPE widget SYSTEM "../description.dtd">

<widget>
    <name>Widgets_RssFeed_RssFeed</name>
    <title>Rss Feed</title>
    <description>Display a RSS feed</description>
    <author>Laurent Declercq / iPMS Core Team</author>
    <email>core@i-pms.net</email>
    <version>1.0.0</version>
    <license>GPLv2</license>
    <load>server</load>
    <params>
        <param name="url">
            <label>Enter the RSS Url here:</label>
            <input type="text" name="url" val="http://" />
        </param>
        <param name="title">
            <label>Optional title</label>
            <input type="text" name="title" val="" />
        </param>
        <param name="entries">
            <label>How many entries do you want to display?</label>
            <select name="entries">
                <callback name="range">
                    <argument>1</argument>
                    <argument>20</argument>
                    <selected>10</selected>
                </callback>
            </select>
        </param>
        <param name="content">
            <label>Show item content?</label>
            <input type="checkbox" name="content" val="0" />
        </param>
        <param name="author">
            <label>Show item author if available?</label>
            <input type="checkbox" name="author" val="0" />
        </param>
        <param name="date">
            <label>Show item date if available?</label>
            <input type="checkbox" name="date" val="0" />
        </param>
    </params>
</widget>
